lemma norm_sq_nonneg (z : K) : 0 ‚â§ norm_sq z :=
add_nonneg (mul_self_nonneg _) (mul_self_nonneg _)

@[simp, is_R_or_C_simps] lemma norm_sq_eq_zero {z : K} : norm_sq z = 0 ‚Üî z = 0 :=
by { rw [norm_sq_eq_def'], simp [sq] }

