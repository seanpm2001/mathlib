          { rw [‚Üêpow_succ', tsub_add_cancel_of_le (succ_le_iff.2 hP‚ÇÅ)] },
          rw [‚Üêmul_div_right_comm, this, mul_right_comm _ (2 : ‚Ñù), mul_assoc, le_div_iff],
