lemma filter.tendsto.rpow {l : filter Œ±} {f g : Œ± ‚Üí ‚Ñù} {x y : ‚Ñù}
  (hf : tendsto f l (ùìù x)) (hg : tendsto g l (ùìù y)) (h : x ‚â† 0 ‚à® 0 < y) :
  tendsto (Œª t, f t ^ g t) l (ùìù (x ^ y)) :=
